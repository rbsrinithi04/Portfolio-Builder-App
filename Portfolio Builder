<body>
  <div class="builder-section">
    <h2>Portfolio Builder</h2>
    <input type="text" id="nameInput" placeholder="Your Name" />
    <textarea id="aboutInput" placeholder="About You"></textarea>
    <input type="text" id="skillsInput" placeholder="Skills (comma separated)" />
    <input type="text" id="projectTitleInput" placeholder="Project Title" />
    <textarea id="projectDescInput" placeholder="Project Description"></textarea>
    <input type="text" id="projectLinkInput" placeholder="Project Link" />
    <button id="addProjectBtn">Add Project</button>
  </div>

  <div class="preview-section">
    <div class="preview">
      <h1 id="previewName">Your Name</h1>
      <p id="previewAbout">About you will appear here.</p>
      <h3>Skills</h3>
      <div class="skills-list" id="previewSkills"></div>
      <h3>Projects</h3>
      <div class="projects-list" id="previewProjects"></div>
    </div>
  </div>

  <script>
    const nameInput = document.getElementById("nameInput");
    const aboutInput = document.getElementById("aboutInput");
    const skillsInput = document.getElementById("skillsInput");
    const projectTitleInput = document.getElementById("projectTitleInput");
    const projectDescInput = document.getElementById("projectDescInput");
    const projectLinkInput = document.getElementById("projectLinkInput");
    const addProjectBtn = document.getElementById("addProjectBtn");

    const previewName = document.getElementById("previewName");
    const previewAbout = document.getElementById("previewAbout");
    const previewSkills = document.getElementById("previewSkills");
    const previewProjects = document.getElementById("previewProjects");

    nameInput.addEventListener("input", () => {
      previewName.textContent = nameInput.value || "Your Name";
    });

    aboutInput.addEventListener("input", () => {
      previewAbout.textContent = aboutInput.value || "About you will appear here.";
    });

    skillsInput.addEventListener("input", () => {
      const skills = skillsInput.value.split(",").map(s => s.trim()).filter(s => s);
      previewSkills.innerHTML = "";
      skills.forEach(skill => {
        const span = document.createElement("span");
        span.textContent = skill;
        previewSkills.appendChild(span);
      });
    });

    addProjectBtn.addEventListener("click", () => {
      if (projectTitleInput.value && projectDescInput.value && projectLinkInput.value) {
        const div = document.createElement("div");
        div.innerHTML = `
          <h4>${projectTitleInput.value}</h4>
          <p>${projectDescInput.value}</p>
          <a href="${projectLinkInput.value}" target="_blank">View Project</a>
        `;
        previewProjects.appendChild(div);
        projectTitleInput.value = "";
        projectDescInput.value = "";
        projectLinkInput.value = "";
      } else {
        alert("Please fill in all project details.");
      }
    });
  </script>
</body>
</html>
