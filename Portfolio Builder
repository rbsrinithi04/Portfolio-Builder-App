  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Portfolio Builder</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background-color: #f7f8fa;
    }

    .builder-section {
      width: 40%;
      background-color: #fff;
      padding: 30px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      overflow-y: auto;
    }

    .builder-section h2 {
      color: #333;
      margin-bottom: 20px;
    }

    .builder-section input, 
    .builder-section textarea {
      width: 100%;
      margin: 10px 0;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .builder-section button {
      background-color: #007BFF;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 6px;
      margin-top: 10px;
      cursor: pointer;
    }

    .preview-section {
      width: 60%;
      padding: 40px;
      background-color: #f2f2f2;
    }

    .preview {
      background-color: white;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .preview h1 {
      color: #007BFF;
      font-size: 28px;
      margin-bottom: 10px;
    }

    .preview p {
      color: #444;
      margin-bottom: 15px;
    }

    .skills-list, .projects-list {
      margin-top: 10px;
    }

    .skills-list span {
      background-color: #007BFF;
      color: white;
      padding: 5px 10px;
      margin: 3px;
      border-radius: 20px;
      display: inline-block;
    }

    .projects-list div {
      background-color: #f9f9f9;
      border-left: 4px solid #007BFF;
      padding: 10px;
      margin: 8px 0;
      border-radius: 6px;
    }

    .projects-list a {
      color: #007BFF;
      text-decoration: none;
    }

    .projects-list a:hover {
      text-decoration: underline;
    }
  </style>
